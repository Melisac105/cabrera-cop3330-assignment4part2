<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SplitMenuButton?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #cbae82#cbae82;" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ucf.assignments.MainWindowControllers">
   <children>
      <Label layoutX="14.0" layoutY="8.0" text="To Do List" textFill="WHITE">
         <font>
            <Font name="System Bold" size="30.0" />
         </font>
      </Label>
      <AnchorPane focusTraversable="true" layoutY="51.0" prefHeight="368.0" prefWidth="604.0" style="-fx-background-color: #ffe0b2#ffe0b2;">
         <children>
            <TableView fx:id="tableView" editable="true" prefHeight="336.0" prefWidth="606.0" style="-fx-background-color: #ffffe4#ffffe4;">
               <columns>
                  <TableColumn id="taskName" fx:id="taskName" prefWidth="110.0" text="Task Name" />
                  <TableColumn id="desc" fx:id="desc" prefWidth="222.0" text="Description" />
                  <TableColumn id="dueDate" fx:id="dueDate" minWidth="5.0" prefWidth="147.0" text="Due Date" />
                  <TableColumn id="complete" fx:id="complete" minWidth="0.0" prefWidth="126.0" text="Complete" />
               </columns>
            </TableView>
            <ImageView fx:id="addButton" fitHeight="25.0" fitWidth="28.0" layoutX="580.0" layoutY="337.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../../java/ucf/assignments/assets/outline_add_circle_black_48pt_3x.png" />
               </image>
            </ImageView>
            <Label fx:id="capacityText" layoutX="235.0" layoutY="340.0" prefHeight="17.0" prefWidth="136.0" text="Remaining Capacity:" textFill="#111111">
               <font>
                  <Font name="System Bold" size="13.0" />
               </font>
            </Label>
            <ImageView fx:id="minusButton" fitHeight="69.0" fitWidth="25.0" layoutX="555.0" layoutY="337.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../../java/ucf/assignments/assets/outline_remove_circle_black_48pt_3x.png" />
               </image>
            </ImageView>
            <Button fx:id="downloadList" layoutX="36.0" layoutY="333.0" mnemonicParsing="false" onAction="#downloadAllTasks" prefHeight="33.0" prefWidth="43.0" style="-fx-background-color: #ffffff00;">
               <graphic>
                  <ImageView fitHeight="37.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../../../../../../Downloads/file_download-black-ios/outline_file_download_black_48pt.xcassets/outline_file_download_black_48pt.imageset/outline_file_download_black_48pt_3x.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Button fx:id="uploadList" layoutY="333.0" mnemonicParsing="false" onAction="#loadSingleToDoList" prefHeight="33.0" prefWidth="35.0" style="-fx-background-color: #ffffff00;">
               <graphic>
                  <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../../../../../../Downloads/file_upload-black-ios/outline_file_upload_black_48pt.xcassets/outline_file_upload_black_48pt.imageset/outline_file_upload_black_48pt_3x.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
         </children>
      </AnchorPane>
      <Button layoutX="456.0" layoutY="14.0" mnemonicParsing="false" text="Clear" />
      <SplitMenuButton layoutX="516.0" layoutY="14.0" mnemonicParsing="false" text="Show">
        <items>
          <MenuItem fx:id="showAll" mnemonicParsing="false" onAction="#displayAllItems" text="All" />
          <MenuItem fx:id="showComplete" mnemonicParsing="false" onAction="#displayCompleteTasks" text="Complete" />
            <MenuItem fx:id="showIncomplete" mnemonicParsing="false" onAction="#displayIncompleteTasks" text="Incomplete" />
        </items>
      </SplitMenuButton>
   </children>
</AnchorPane>
